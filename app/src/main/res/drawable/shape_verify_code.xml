<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Non focused states -->

    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <stroke android:color="@color/c2" android:width="0.5dp" />
            <corners
                android:radius="3dp" />
        </shape>
    </item>

    <!-- Focused states -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <stroke android:color="@color/c7" android:width="0.5dp" />
            <corners
                android:radius="3dp" />
        </shape>
    </item>

    <!-- Normal -->
    <item >
        <shape android:shape="rectangle">
            <stroke android:color="@color/c1" android:width="0.5dp" />
            <corners
                android:radius="3dp" />
        </shape>
    </item>
</selector>