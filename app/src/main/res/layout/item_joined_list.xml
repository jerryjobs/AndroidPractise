<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    >

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="?android:attr/selectableItemBackground"
      android:gravity="center_vertical"
      >

    <ImageView
        android:id="@+id/brand_icon"
        android:layout_width="64dp"
        android:layout_height="48dp"
        android:layout_margin="12dp"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/brand_icon"
        android:layout_toEndOf="@id/brand_icon"
        android:orientation="vertical"
        >

      <TextView
          android:id="@+id/brand_name"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:lines="1"
          android:textColor="@color/c3"
          android:textSize="15sp"
          />

      <TextView
          android:id="@+id/join_comment"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@id/brand_name"
          android:layout_marginTop="8dp"
          android:layout_toRightOf="@id/brand_icon"
          android:layout_toEndOf="@id/brand_icon"
          android:ellipsize="end"
          android:lines="1"
          android:textColor="@color/c4"
          android:textSize="13sp"
          />
    </LinearLayout>

    <TextView
        android:id="@+id/join_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="12dp"
        android:layout_marginEnd="12dp"
        android:background="@color/c1"
        android:gravity="center"
        android:paddingBottom="2dp"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:paddingTop="2dp"
        android:text="已通过"
        android:textColor="@android:color/white"
        android:textSize="12sp"
        />
  </RelativeLayout>

  <View
      android:id="@+id/section_split"
      android:layout_width="match_parent"
      android:layout_height="0.5dp"
      android:layout_marginLeft="12dp"
      android:layout_marginRight="12dp"
      android:background="@color/c5"
      />
</LinearLayout>