<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

  <!-- 图片 -->
  <RelativeLayout
      android:id="@+id/expertsys_thumb_img_layout"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerInParent="true"
      android:background="#eeeeee"
      android:padding="1dp"
      >

    <com.component.photo.FullImageView
        android:id="@+id/expertsys_thumb_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        />
  </RelativeLayout>

  <!-- 删除 -->
  <RelativeLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignRight="@id/expertsys_thumb_img_layout"
      android:layout_alignTop="@id/expertsys_thumb_img_layout"
      >

    <ImageView
        android:id="@+id/widget_draggrid_delete_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/newbuilt_ic_deletepic"
        />
  </RelativeLayout>


</RelativeLayout>
