<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            tools:context="com.ikaowo.join.modules.mine.activity.MineActivity"
            android:background="@color/c6"
            tools:showIn="@layout/activity_mine">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:orientation="vertical">
        <View
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:background="@color/c6"/>
        <com.ikaowo.join.modules.mine.MineItemWidget
            android:id="@+id/auth_state"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            app:item_title="认证状态"
            app:type="text">
        </com.ikaowo.join.modules.mine.MineItemWidget>

        <View
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:background="@color/c6"/>

        <com.ikaowo.join.modules.mine.MineItemWidget
            android:id="@+id/user_icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:type="icon"
            app:item_title="头像"
            app:icon_height="64dp"
            app:icon_width="64dp"
            app:icon_margin="12dp">
        </com.ikaowo.join.modules.mine.MineItemWidget>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/c5"/>

        <com.ikaowo.join.modules.mine.MineItemWidget
            android:id="@+id/user_name"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            app:type="text"
            app:item_title="名字"
            app:icon_height="64dp"
            app:icon_margin="64dp">
        </com.ikaowo.join.modules.mine.MineItemWidget>


        <!--<include android:id="auth_state" layout="@layout/widget_mine_item3" />-->

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/c5"/>
        <com.ikaowo.join.modules.mine.MineItemWidget
            android:id="@+id/brand_name"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            app:type="text"
            app:item_title="品牌"
            app:icon_height="64dp"
            app:icon_margin="64dp">
        </com.ikaowo.join.modules.mine.MineItemWidget>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/c5"/>

        <com.ikaowo.join.modules.mine.MineItemWidget
            android:id="@+id/user_title"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            app:type="text"
            app:item_title="职位"
            app:icon_height="64dp"
            app:icon_margin="64dp">
        </com.ikaowo.join.modules.mine.MineItemWidget>


        <View
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:background="@color/c6"/>

        <com.ikaowo.join.modules.mine.MineItemWidget
            android:id="@+id/user_phone"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            app:type="text"
            app:item_title="手机"
            app:icon_height="64dp"
            app:icon_margin="64dp">
        </com.ikaowo.join.modules.mine.MineItemWidget>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/c5"/>

        <com.ikaowo.join.modules.mine.MineItemWidget
            android:id="@+id/user_update_passwd"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            app:type="icon"
            app:item_title="修改密码"
            app:item_icon="@drawable/content_ic_arrow">
        </com.ikaowo.join.modules.mine.MineItemWidget>
        <!--<include android:id="auth_state" layout="@layout/widget_mine_item3" />-->

        <View
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:background="@color/c6"/>

        <TextView
            android:id="@+id/logout"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:text="退出登录"
            android:gravity="center"
            android:textSize="15sp"
            android:textColor="@android:color/holo_red_light"
            />

    </LinearLayout>
</android.support.v4.widget.NestedScrollView>