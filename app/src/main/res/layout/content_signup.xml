<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".modules.user.activity.SignupActivity"
    tools:showIn="@layout/activity_signup">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">
        <com.ikaowo.join.modules.user.widget.CustomEditTextView
            android:id="@+id/brand_name"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>

        <com.ikaowo.join.modules.user.widget.CustomEditTextView
            android:id="@+id/user_name"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>

        <com.ikaowo.join.modules.user.widget.CustomEditTextView
            android:id="@+id/user_title"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>


        <com.ikaowo.join.modules.user.widget.CustomEditTextView
            android:id="@+id/user_card"
            android:layout_width="match_parent"
            app:show_split="false"
            android:layout_height="70dp"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:background="@color/c5"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">
        <com.ikaowo.join.modules.user.widget.DeletableEditTextView
            android:id="@+id/phone"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="14sp"
            android:maxLength="11"
            android:inputType="number"
            android:hint="@string/phone"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.ikaowo.join.modules.user.widget.DeletableEditTextView
                android:id="@+id/verify_code"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:show_delete_icon="false"
                android:textSize="14sp"
                android:hint="@string/verify_code"/>

            <TextView
                android:id="@+id/verify_btn"
                android:layout_width="90dp"
                android:layout_height="32dp"
                android:gravity="center"
                android:textSize="12sp"
                android:textColor="@color/verify_code"
                android:background="@drawable/shape_verify_code"
                android:layout_gravity="right|center_vertical"
                android:enabled="false"
                android:layout_marginBottom="6dp"
                android:text="@string/get_verify_code"/>
        </FrameLayout>

        <com.ikaowo.join.modules.user.widget.DeletableEditTextView
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="14sp"
            android:hint="@string/password"/>
    </LinearLayout>
</LinearLayout>